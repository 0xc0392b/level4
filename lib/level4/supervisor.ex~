defmodule Level4.Supervisor do
  @moduledoc """
  ...
  """

  use Supervisor

  @doc """
  ...
  """
  def start_link(opts) do
    Supervisor.start_link(__MODULE__, :ok, opts)
  end

  @doc """
  ...
  """
  @impl true
  def init(:ok) do
    IO.puts("starting root supervisor")

    Supervisor.init(
      [
        ControlRoom.Registry
      ],
      strategy: :one_for_one
    )
  end
end
